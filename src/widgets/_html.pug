mixin Widget_HTML(cond, title)
  -
    cond = cond || 'true'
    title = title || 'no title'
    var type = 'HTML'
    var id = type + newID()
  b:widget(
    id=id
    locked="false"
    title=title
    type='HTML'
    version='1')

    b:widget-settings
      b:widget-setting(name='content')
        block

    b:includable#main
      b:if(cond!=cond)
        data:content/
