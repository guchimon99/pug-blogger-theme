mixin Widget_Label(id, title)
  b:widget(
    id=id
    title=title
    locked='true'
    type='Label')
    b:widget-settings
      b:widget-setting(name='sorting') ALPHA
      b:widget-setting(name='display') LIST
      b:widget-setting(name='selectedLabelsList')/
      b:widget-setting(name='showType') ALL
      b:widget-setting(name='showFreqNumbers') false

    b:includable#main
      div(expr:class!='&quot;widget-content &quot; + data:display + &quot;-label-widget-content&quot;')
        b:if(cond!='data:display == &quot;list&quot;')
          ul
            b:loop(values='data:labels' var='label')
              li
                b:if(cond!='data:blog.url == data:label.url')
                  span(expr:dir='data:blog.languageDirection') #[#{'data:label.name'}/]
                  b:else/
                  a(expr:dir!='data:blog.languageDirection' expr:href!='data:label.url') #[#{'data:label.name'}/]

                b:if(cond!='data:showFreqNumbers')
                  span(dir='ltr') (#[#{'data:label.count'}/])

          b:else/

          b:loop(values='data:labels' var='label')
            span(expr:class!='&quot;label-size label-size-&quot; + data:label.cssSize')
              b:if(cond!='data:blog.url == data:label.url')
                span(expr:dir!='data:blog.languageDirection') #[#{'data:label.name'}/]
                b:else/
                a(expr:dir!='data:blog.languageDirection' expr:href!='data:label.url') #[#{'data:label.name'}/]

              b:if(cond!='data:showFreqNumbers')
                span(class='label-count' dir='ltr') (#[#{'data:label.count'}/])

