mixin Widget_Blog(id, title)
  b:widget(
    id=id
    title=title
    locked='true'
    type='Blog'
  )
    b:widget-settings
      b:widget-setting(name='showDateHeader') false
      b:widget-setting(name='style.textcolor') #000000
      b:widget-setting(name='showShareButtons') false
      b:widget-setting(name='authorLabel') By
      b:widget-setting(name='showCommentLink') false
      b:widget-setting(name='style.urlcolor') #008000
      b:widget-setting(name='showAuthor') false
      b:widget-setting(name='style.linkcolor') #0000ff
      b:widget-setting(name='style.unittype') TextAndImage
      b:widget-setting(name='style.bgcolor') #ffffff
      b:widget-setting(name='showAuthorProfile') false
      b:widget-setting(name='style.layout') 1x1
      b:widget-setting(name='showLabels') false
      b:widget-setting(name='showLocation') false
      b:widget-setting(name='showTimestamp') false
      b:widget-setting(name='postsPerAd') 1
      b:widget-setting(name='showBacklinks') false
      b:widget-setting(name='style.bordercolor') #ffffff
      b:widget-setting(name='showInlineAds') false
      b:widget-setting(name='showReactions') false

    b:includable#main(var='top')
      b:if(cond!='!data:mobile')

        .blog-posts.hfeed
          b:include(data='top' name='status-message')/
          b:loop(values='data:posts' var='post')
            b:if(cond!='data:post.isDateStart and not data:post.isFirstPost')
              | &lt;/div&gt;&lt;/div&gt;
            b:if(cond!='data:post.isDateStart')
              | &lt;div class=&quot;date-outer&quot;&gt;
            b:if(cond!='data:post.dateHeader')
              h2.data-header
                span #[#{'data:post.dateHeader'}/]
            b:if(cond!='data:post.isDateStart')
              | &lt;div class=&quot;date-posts&quot;&gt;
            .post-outer
              b:include(data='post', name='post')/
              b:include(
                cond!='data:blog.pageType in {&quot;static_page&quot;,&quot;item&quot;}'
                data='post' name='comment_picker'
              )
            b:if(cond!='data:post.includeAd')
              .inline-ad
                data:adCode

          b:if(cond!='data:numPosts != 0')
            | &lt;/div&gt;&lt;/div&gt;

        b:include(name='nextprev')/

        b:include(name='feedLinks')/

        b:else/
        b:include(name='mobile-main')/

      b:include(cond!='data:top.showPlusOne' name='googlePlusBootstrap')/

    b:includable#backlinkDeleteIcon(var='backlink')
      span(expr:class!='&quot;item-control &quot; + data:backlink.adminClass')
        a(expr:href!='data:backlink.deleteUrl', expr:title!='data:top.deleteBacklinkMsg')
          img(src='https://resources.blogblog.com/img/icon_delete13.gif')/

    b:includable#backlinks(var='post')
      a(name='links')/
      h4
        data:post.backlinksLabel/
      b:if(cond!='data:post.numBacklinks != 0')
        dl#comments-block.comments-block
          b:loop(values='data:post.backlinks',var='backlink')
            .collapsed-backlink.backlink-control
              dt.comment-title
                span.backlink-toggle-zippy.
                  &#160;
                a(expr:href!='data:backlink.url', rel='nofollow')
                  #{'data:backlink.title'}/
                b:include(data='backlink',name='backlinkDeleteIcon')/
              dd.comment-body.collapseable
                #{'data:backlink.snippet'}/

              dd.comment-footer.collapseable
                span.comment-author #[#{'data:post.authorLabel'}/] #[#{'data:backlink.author'}/]
                span.comment-timestamp #[#{'data:post.timestampLabel'}/] #[#{'data:backlink.timestamp'}/]

      p.comment-footer
        a.comment-link(
          expr:href!='data:post.createLinkUrl',
          expr:id!='data:widget.instanceId + &quot;_backlinks-create-link&quot;'
          target='_blank')
          #{'data:post.createLinkLabel'}/

    b:includable#comment-form(var='post')
      .comment-form
        a(name='comment-form')/
        b:if(cond!='data:mobile')

          h4#comment-post-message
            a(expr:id!='data:widget.instanceId + &quot;_comment-editor-toggle-link&quot;', href!='javascript:void(0)')
              data:postCommentMsg/
          p
            data:blogCommentMessage/
          data:blogTeamBlogMessage/
          a#comment-editor-src(expr:href!='data:post.commentFormIframeSrc')/
          iframe#comment-editor.blogger-iframe-colorize.blogger-comment-from-post(
            allowtransparency='true',
            expr:height='data:cmtIframeInitialHeight',
            frameborder='0',
            name='comment-editor',
            src='',
            style='display: none',
            width='100%'
          )/

          b:else/

          h4#comment-post-message
            data:postCommentMsg/
          p
            data:blogCommentMessage/
          data:blogTeamBlogMessage/
          a(expr:href='data:post.commentFormIframeSrc', id='comment-editor-src')/
          iframe#comment-editor.blogger-iframe-colorize.blogger-comment-from-post(
            allowtransparency='true',
            expr:height!='data:cmtIframeInitialHeight',
            frameborder='0',
            name='comment-editor',
            src='',
            width='100%'
          )/

        #{'data:post.cmtfpIframe'}/
        script(type='text/javascript').
          BLOG_CMT_createIframe(&#39;<data:post.appRpcRelayPath/>&#39;);

    b:includable#commentDeleteIcon(var='comment')
      span(expr:class!='&quot;item-control &quot; + data:comment.adminClass')
        b:if(cond!='data:showCmtPopup')
          .goog-toggle-button
            .goog-inline-block.comment-action-icon

          b:else/

          a.comment-delete(expr:href!='data:comment.deleteUrl', expr:title!='data:top.deleteCommentMsg')
            img(src='https://resources.blogblog.com/img/icon_delete13.gif')/

    b:includable#comment_count_picker(var='post')
      b:if(cond!='data:post.commentSource == 1')
        span.cmt_count_iframe_holder(
          expr:data-count!='data:post.numComments',
          expr:data-onclick!='data:post.addCommentOnclick',
          expr:data-post-url!='data:post.url',
          expr:data-url!='data:post.url.canonical.http'
        )

        b:else/
        a.comment-link(
          expr:href!='data:post.addCommentUrl',
          expr:onclick!='data:post.addCommentOnclick'
        ) #[#{'data:blog.pageName'}/]:

    b:includable#comment_picker(var='post')
      b:if(cond!='data:post.commentSource == 1')
        b:include(data='post', name='iframe_comments')/

        b:elseif(cond!='data:post.showThreadedComments')/
        b:include(data='post', name='threaded_comments')/

        b:else/
        b:include(data='post', name='comments')/

    b:includable#comments(var='post')
      #comments.comments
        a(name='comments')/
        b:if(cond!='data:post.allowComments')
          h4 #[#{'data:post.commentLabelFull'}/]:
          b:if(cond!='data:post.commentPagingRequired')
            span.paging-control-container
              b:if(cond!='data:post.hasOlderLinks')
                a(expr:class!='data:post.oldLinkClass', expr:href='data:post.oldestLinkUrl') #[#{'data:post.oldestLinkText'}/]
                | &#160;
                a(expr:class='data:post.oldLinkClass', expr:href='data:post.olderLinkUrl') #[#{'data:post.olderLinkText'}/]
                | &#160;

              #{'data:post.commentRangeText'}/

              b:if(cond!='data:post.hasNewerLinks')
                | &#160;
                a(expr:class!='data:post.newLinkClass',expr:href!='data:post.newerLinkUrl') #[#{'data:post.newerLinkText'}/]
                | &#160;
                a(expr:class!='data:post.newLinkClass',expr:href!='data:post.newestLinkUrl') #[#{'data:post.newestLinkText'}/]

          div(expr:id!='data:widget.instanceId + &quot;_comments-block-wrapper&quot;')
            dl#comments-block(expr:class!='data:post.avatarIndentClass')
              b:loop(values='data:post.comments', var='comment')
                dt(expr:class!='&quot;comment-author &quot; + data:comment.authorClass',expr:id!='data:comment.anchorName')
                  b:if(cond!='data:comment.favicon')
                    img(expr:src!='data:comment.favicon', height='16px', style='margin-bottom:-2px;', width='16px')/

                  a(expr:name!='data:comment.anchorName')/

                  b:if(cond!='data:blog.enabledCommentProfileImages')
                    #{'data:comment.authorAvatarImage'}/

                  b:if(cond!='data:comment.authorUrl')
                    a(expr:href!='data:comment.authorUrl' rel='nofollow')
                      #{'data:comment.author'}/

                    b:else/
                    #{'data:comment.author'}/

                  data:commentPostedByMsg/

                dd(class='comment-body' expr:id!='data:widget.instanceId + data:comment.cmtBodyIdPostfix')
                  b:if(cond!='data:comment.isDeleted')
                    span.deleted-comment #[#{'data:comment.body'}/]

                    b:else/
                    p #[#{'data:comment.body'}/]

                dd.comment-footer
                  span.comment-timestamp
                    a(expr:href!='data:comment.url' title='comment permalink')
                      #{'data:comment.timestamp'}/
                    b:include(data='comment' name='commentDeleteIcon')/

          b:if(cond!='data:post.commentPagingRequired')
            span.paging-control-container
              a(expr:class!='data:post.oldLinkClass',expr:href!='data:post.oldestLinkUrl')
                #{'data:post.oldestLinkText'}/
              a(expr:class='data:post.oldLinkClass',expr:href='data:post.olderLinkUrl')
                #{'data:post.olderLinkText'}/
              | &#160;
              #{'data:post.commentRangeText'}/
              | &#160;
              a(expr:class!='data:post.newLinkClass', expr:href!='data:post.newerLinkUrl')
                #{'data:post.newerLinkText'}/
              a(expr:class!='data:post.newLinkClass', expr:href!='data:post.newestLinkUrl')
                #{'data:post.newestLinkText'}/

          p.comment-footer
            b:if(cond!='data:post.embedCommentForm')
              b:if(cond!='data:post.allowNewComments')
                b:include(data='post', name='comment-form')/

                b:else/
                #{'data:post.noNewCommentsText'}/

              b:elseif(cond!='data:post.allowComments')/
              a(expr:href!='data:post.addCommentUrl', expr:onclick!='data:post.addCommentOnclick')
                data:postCommentMsg

        b:if(cond!='data:showCmtPopup')
          #comment-popup
            iframe(allowtransparency='true',frameborder='0',id='comment-actions',name='comment-actions',scrolling='no')/

        div#backlinks-container
          div(expr:id!='data:widget.instanceId + &quot;_backlinks-container&quot;')
            b:include(cond!='data:post.showBacklinks', data='post', name='backlinks')/

    b:includable#feedLinks
      b:if(cond!='data:blog.pageType != &quot;item&quot;')
        b:if(cond!='data:feedLinks')
          .blog-feeds
            b:include(data='feedLinks' name='feedLinksBody')/

          b:else/
          .post-feeds
            b:loop(values='data:posts' var='post')
              b:include(cond!='data:post.allowComments and data:post.feedLinks',data!='post.feedLinks',name='feedLinksBody')/

    b:includable#feedLinksBody(var='links')
      .feed-links
        data:feedLinksMsg/
        b:loop(values='data:links' var='f')
          a.feed-link(expr:href!='data:f.url', expr:type!='data:f.mimeType', target='_blank')
          | #[#{'data:f.name'}/] (#[#{'data:f.feedType'}/])

    b:includable#iframe_comments(var='post')
      b:if(cond!='data:post.allowIframeComments')
        script(expr:src!='data:post.iframeCommentSrc', type='text/javascript')/
        div.cmt_iframe_holder(expr:data-href!='data:post.url.canonical',expr:data-viewtype!='data:post.viewType')/
        b:if(cond!='data:post.embedCommentForm == &quot;false&quot;')
          a(expr:href='data:post.addCommentUrl',expr:onclick!='data:post.addCommentOnclick')
            #{'data:postCommentMsg'}/

    b:includable#mobile-index-post(var='post')
      div.mobile-date-outer.date-outer
        b:if(cond!='data:post.dateHeader')
          div.date-header
            span
              #{'data:post.dateHeader'}/

        div.mobile-post-outer
          a(expr:href='data:post.url')
            h3.mobile-index-title.entry-title(itemprop='name')
              #{'data:post.title'}/

            .mobile-index-arrow
              | &amp;rsaquo;

            .mobile-index-contents
              b:if(cond!='data:post.thumbnailUrl')
                div.mobile-index-thumbnail
                  div.Image
                    img(expr:src!='data:post.thumbnailUrl')/

              div.post-body
                b:if(cond!='data:post.snippet')
                  #{'data:post.snippet'}/

            div(style='clear: both;')/

          .mobile-index-comment
            b:include(
              data='post' name='comment_count_picker'
              cond!='data:blog.pageType != &quot;static_page&quot; and data:post.allowComments and data:post.numComments != 0'
            )/

    b:includable#mobile-main(var='top')
      div.blog-posts.hfeed
        b:include(data='top', name='status-message')/

        b:if(cond!='data:blog.pageType == &quot;index&quot;')
          b:loop(values='data:posts', var='post')
            b:include(data='post', name='mobile-index-post')/

          b:else/
          b:loop(values='data:posts',var='post')
            b:include(data='post', name='mobile-post')/

        b:include(name='mobile-nextprev')/

    b:includable#mobile-nextprev
      div#blog-pager.blog-pager
        b:if(cond!='data:newerPageUrl')
          div#blog-pager-newer-link.mobile-link-button
            a.blog-pager-newer-link(
              expr:href!='data:newerPageUrl',
              expr:id!='data:widget.instanceId + &quot;_blog-pager-newer-link&quot;'
              expr:title!='data:newerPageTitle')
                | &amp;lsaquo;

        b:if(cond!='data:olderPageUrl')
          div#blog-pager-older-link.mobile-link-button
            a.blog-pager-older-link(
              expr:href!='data:olderPageUrl',
              expr:id!='data:widget.instanceId + &quot;_blog-pager-older-link&quot;',
              expr:title='data:olderPageTitle')
                | &amp;lsaquo;

        div#blog-pager-home-link.mobile-link-button
          a.home-link(expr:href!='data:blog.homepageUrl')
            data:homeMsg/

        div.mobile-desktop-link
          a.home-link(expr:href!='data:desktopLinkUrl')
            data:desktopLinkMsg/

        div.clear/

    b:includable#mobile-post(var='post')
      .date-outer
        b:if(cond!='data:post.dateHeader')
          h2.date-header
            span #[#{'data:post.dateHeader'}/]

        div.date-posts
          div.post-outer

            div.post.hentry.uncustomized-post-template(itemscope='itemscope' itemtype='http://schema.org/BlogPosting')
              b:if(cond!='data:post.thumbnailUrl')
                meta(expr:content!='data:post.thumbnailUrl', itemprop='image_url')/

              meta(expr:content!='data:blog.blogId',itemprop='blogId')/
              meta(expr:content!='data:post.id',itemprop='postId')/

              a(expr:name!='data:post.id')/

              b:if(cond!='data:post.title')
                h3.post-title.entry-title(itemprop='name')
                  b:if(cond!='data:post.link')
                    a(expr:href!='data:post.link')
                      #{'data:post.title'}/

                    b:elseif(cond!='data:post.url and data:blog.url != data:post.url')/
                    a(expr:href!='data:post.url')
                      #{'data:post.title'}/

                    b:else/
                    #{'data:post.title'}/

              div.post-header
                div.post-header-line-1/

              div.post-body.entry-content(expr:id='&quot;post-body-&quot; + data:post.id' itemprop='articleBody')
                #{'data:post.body'}/
                div(style='clear: both;')/

              div.post-footer
                div.post-footer-line.post-footer-line-1
                  span.post-author.vcard
                    b:if(cond!='data:top.showAuthor')
                      b:if(cond!='data:post.authorProfileUrl')
                        span.fn(itemprop='author',itemscope='itemscope',itemtype='http://schema.org/Person')
                          meta(expr:content!='data:post.authorProfileUrl',itemprop='url')/
                          a(expr:href!='data:post.authorProfileUrl' rel='author' title='author profile')
                            span(itemprop='name') #[#{'data:post.author'}/]

                        b:else/
                        span.fn(itemprop='author' itemscope='itemscope' itemtype='http://schema.org/Person')
                          span(itemprop='name') #[#{'data:post.author'}/]

                  span.post-timestamp
                    b:if(cond!='data:top.showTimestamp')
                      #{'data:top.timestampLabel'}/
                      b:if(cond!='data:post.url')
                        meta(expr:content!='data:post.url.canonical',itemprop='url')/
                        a.timestamp-link(expr:href!='data:post.url',rel='bookmark',title='permanent link')
                          abbr.published(expr:title!='data:post.timestampISO8601',itemprop='datePublished')
                            #{'data:post.timestamp'}/

                  span.post-comment-link
                    b:include(
                      cond!='data:blog.pageType not in {&quot;item&quot;,&quot;static_page&quot;} and data:post.allowComments'
                      data='post' name='comment_count_picker' )/

                div.post-footer-line.post-footer-line-2
                  b:if(cond!='data:top.showMobileShare')
                    div#mobile-share-button.mobile-link-button.goog-inline-block
                      a(href='javascript:void(0);')
                        data:shareMsg/

                  b:if(cond!='data:top.showDummy')
                    div.goog-inline-block.dummy-container
                      #{'data:post.dummyTag'}/

              b:include(cond!='data:blog.pageType in {&quot;static_page&quot;,&quot;item&quot;}',data='post',name='comment_picker')/

    b:includable#nextprev
      div#blog-pager.blog-pager

        b:if(cond!='data:newerPageUrl')
          span#blog-pager-newer-link
            a.blog-pager-newer-link(
              expr:href!='data:newerPageUrl',
              expr:id!='data:widget.instanceId + &quot;_blog-pager-newer-link&quot;',
              expr:title='data:newerPageTitle')
              data:newerPageTitle/

        b:if(cond!='data:olderPageUrl')
          span#blog-pager-older-link
            a.blog-pager-older-link(
              expr:href!='data:olderPageUrl',
              expr:id!='data:widget.instanceId + &quot;_blog-pager-older-link&quot;',
              expr:title='data:olderPageTitle')
              data:olderPageTitle/

        a.home-link(expr:href='data:blog.homepageUrl')
          data:homeMsg/

        b:if(cond!='data:mobileLinkUrl')
          div.blog-mobile-link
            a(expr:href!='data:mobileLinkUrl')
              data:mobileLinkMsg/

      div.clear

    b:includable#post(var='post')

      div.post.hentry.uncustomized-post-template(itemprop='blogPost',itemscope='itemscope',itemtype='http://schema.org/BlogPosting')

        b:if(cond!='data:post.firstImageUrl')
          meta(expr:content!='data:post.firstImageUrl',itemprop='image_url')/

        meta(expr:content!='data:blog.blogId', itemprop='blogId')/
        meta(expr:content!='data:post.id', itemprop='postId')/

        a(expr:name!='data:post.id')/

        b:if(cond!='data:post.title')
          h3.post-title.entry-title(itemprop='name')
          b:if(cond!='data:post.link or (data:post.url and data:blog.url != data:post.url)')
            a(expr:href!='data:post.link ? data:post.link : data:post.url')
              #{'data:post.title'}/
            b:else/
            data:post.title/

        div.post-header
          div.post-header-line-1/

        div.post-body.entry-content(
          expr:id!='&quot;post-body-&quot; + data:post.id',
          expr:itemprop='(data:blog.metaDescription ? &quot;&quot; : &quot;description &quot;) + &quot;articleBody&quot;')
          #{'data:post.body'}/
          div(style='clear: both;')/

        b:if(cond!='data:post.hasJumpLink')
          div.jump-link
            a(expr:href='data:post.url + &quot;#more&quot;', expr:title='data:post.title')
              #{'data:post.jumpText'}/

        div.post-footer
          div.post-footer-line.post-footer-line-1
            span.post-author.vcard
              b:if(cond!='data:top.showAuthor')
                #{'data:top.authorLabel'}/
                b:if(cond!='data:post.authorProfileUrl')
                  span.fn(itemprop='author' itemscope='itemscope' itemtype='http://schema.org/Person')

                    meta(expr:content!='data:post.authorProfileUrl' itemprop='url')/
                    a.g-profile(expr:href='data:post.authorProfileUrl' rel='author' title='author profile')
                      span(itemprop='name') #[#{'data:post.author'}/]

                  b:else/
                  span.fn(itemprop='author' itemscope='itemscope' itemtype='http://schema.org/Person')
                    span(itemprop='name') #[#{'data:post.author'}/]

            span.post-timestamp
              b:if(cond!='data:top.showTimestamp')
                #{'data:top.timestampLabel'}/
                b:if(cond!='data:post.url')
                  meta(expr:content!='data:post.url.canonical' itemprop='url')/
                  a.timestamp-link(expr:href!='data:post.url' rel='bookmark' title='permanent link')
                    abbr.published(expr:title!='data:post.timestampISO8601' itemprop='datePublished')
                      #{'data:post.timestamp'}/

            span.reaction-buttons
              b:if(cond!='data:top.showReactions')
                table(border='0' cellpadding='0' cellspacing='0' width='100%')
                  tr
                    td.reactions-label-cell(nowrap='nowrap' valign='top' width='1%')
                      span.reactions-label #[#{'data:top.reactionsLabel'}/]
                      | &#160;
                    td
                      iframe.reactions-iframe(
                        allowtransparency='true'
                        expr:src!='data:post.reactionsUrl'
                        frameborder='0'
                        name='reactions'
                        scrolling='no'
                      )/

            span.post-comment-link
              b:include(
                cond!='data:blog.pageType not in {&quot;item&quot;,&quot;static_page&quot;} and data:post.allowComments'
                data='post' name='comment_count_picker')/

            span.post-backlinks.post-comment-link
              b:if(cond!='data:blog.pageType not in {&quot;item&quot;,&quot;static_page&quot;} and data:post.showBacklinks')
                a.comment-link(expr:href='data:post.url + &quot;#links&quot;')
                  #{'data:top.backlinkLabel'}/

            span.post-icons
              b:if(cond!='data:post.emailPostUrl')
                span.item-action
                  a(expr:href!='data:post.emailPostUrl' expr:title!='data:top.emailPostMsg')
                    img(alt='' class='icon-action' height='13' src='https://resources.blogblog.com/img/icon18_email.gif' width='18')/
              b:include(data='post' name='postQuickEdit')/

            div.post-share-buttons.goog-inline-block
              b:include(cond!='data:post.sharePostUrl' data='post' name='shareButtons')/

          div.post-footer-line.post-footer-line-2
            span.post-labels
              b:if(cond!='data:top.showPostLabels and data:post.labels')
                #{'data:postLabelsLabel'}/
                b:loop(values='data:post.labels' var='label')
                  a(expr:href='data:label.url' rel='tag')
                    #{'data:label.name'}/
                  b:if(cond!='not data:label.isLast') ,

          div.post-footer-line.post-footer-line-3
            span.post-location
              b:if(cond!='data:top.showLocation and data:post.location')
                #{'data:postLocationLabe'}/
                a(expr:href='data:post.location.mapsUrl' target='_blank')
                  #{'data:post.location.name'}/

          b:if(cond!='data:post.authorAboutMe')
            div.author-profile(itemprop='author' itemscope='itemscope' itemtype='http://schema.org/Person')
              b:if(cond!='data:post.authorPhoto.url')
                img(expr:src='data:post.authorPhoto.url' itemprop='image' width='50px')/

              div
                a.g-profile(expr:href='data:post.authorProfileUrl' itemprop='url' rel='author' title='author profile')
                  span(itemprop='name') #[#{'data:post.author'}/]

              span(itemprop='description')
                #{'data:post.authorAboutMe'}/

